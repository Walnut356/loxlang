{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rslox'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rslox",
                    "--package=rslox"
                ],
                "filter": {
                    "name": "rslox",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rslox w/ program",
            "cargo": {
                "args": [
                    "+stage1",
                    "build",
                    "--bin=rslox",
                    "--package=rslox"
                ],
                "filter": {
                    "name": "rslox",
                    "kind": "bin"
                }
            },
            "args": [
                "./temp.lox"
            ],
            "cwd": "${workspaceFolder}"
        },
                {
                    "type": "lldb",
                    "request": "launch",
                    "name": "Debug rslox GC",
                    "cargo": {
                        "args": [
                            "build",
                            "--bin=rslox",
                            "--package=rslox"
                        ],
                        "filter": {
                            "name": "rslox",
                            "kind": "bin"
                        }
                    },
                    "args": [
                        "./temp.lox"
                    ],
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "RUSTFLAGS": "stress_gc",
                    }
                },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/cslox/bin/Debug/net8.0/loxlang.exe",
            "args": [
                "./test_files/closure.lox"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}